      </div>
    </fieldset>

    <fieldset>
      <div data-role="fieldcontain">
        <label for="switch-2">Switch 2:</label>
        <input type="checkbox" id="switch-2" <%= @switch_2 ? 'checked' : '' %> data-role="flipswitch">
      </div>
    </fieldset>
  </form>
  </div><!-- /content -->

</div><!-- /page -->

